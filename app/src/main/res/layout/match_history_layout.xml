<?xml version="1.0" encoding="utf-8"?>
 <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            card_view:cardCornerRadius="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:text="TeamaName"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_width="68dp"
                    android:layout_height="50dp"
                    android:id="@+id/teamaname"
                    android:layout_weight="1"/>
            <TextView
                    android:padding="5dp"

                    android:layout_margin="5dp"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    android:text="Score:\n101/10"
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/teamascore" android:layout_weight="1"/>
            <TextView
                    android:padding="5dp"

                    android:layout_margin="5dp"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    android:text="Over's:\n101/10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/teamaover"
                    android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="63dp"
        >

            <TextView
                    android:padding="5dp"

                    android:layout_margin="5dp"
                    android:text="TeamaName"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_width="68dp"
                    android:layout_height="43dp"
                    android:id="@+id/teambname"
                    android:layout_weight="1"/>
            <TextView
                    android:padding="5dp"

                    android:layout_margin="5dp"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    android:text="Score:\n101/10"
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/teambscore" android:layout_weight="1"/>
            <TextView
                    android:padding="5dp"

                    android:layout_margin="5dp"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    android:text="Over's:\n101/10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/teambover" android:layout_weight="1"/>


        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="125dp"
        >


            <TextView

                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:text="Result: pakistan win mattch"
                    android:layout_width="52dp"
                    android:layout_height="38dp" android:id="@+id/matchresult"
                    android:layout_weight="1"/>
            <TextView
                    android:padding="5dp"

                    android:textSize="15dp"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:text="Date:9/10/2019"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp" android:id="@+id/matchdate" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="170dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView


                    android:layout_margin="5dp"
                    android:id="@+id/imgdelet"
                    android:layout_width="192dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_delete"
                    android:tint="#eeeeee"/>
            <ImageView
                    android:layout_margin="5dp"
                    android:id="@+id/imgShare"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_share"
                    android:tint="#eeeeee"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
